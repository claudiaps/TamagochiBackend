// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id
  email    String
  password String
  Pet      Pet[]
}

model Pet {
  id        Int      @id
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  restLevel Int
  foodLevel Int
  funLevel  Int
  deletedAt DateTime
  updatedAt DateTime
  lastGet   DateTime
  createdAt DateTime
}
